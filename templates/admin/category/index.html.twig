{% extends 'admin/admin.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <p>
        <a class="btn btn-primary btn-sm" href="{{ path('admin.category.create') }}">Ajouter une catégorie</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Recettes</th>
                <th style="width: 200px">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>
                        <a href="{{ path('admin.category.edit', {id: category.id}) }}">{{ category.name }}</a>
                    </td>
                    <td>
                    {{ category.count }}
                    </td>
                    <td>
                        <div class="d-flex gap-1">
                            <a class="btn btn-primary btn-sm" href="{{ path('admin.category.edit', {id: category.id}) }}">Editer</a>
                            <form action="{{ path('admin.category.delete', {id: category.id}) }}" method="POST">
                                <input name="_method" type="hidden" value="DELETE" />
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
